<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.haivu.frogtutoring.profile_tutor"
    android:padding="10dp"
    android:background="@drawable/background">


    <TextView
        android:gravity="center"
        android:includeFontPadding="false"
        android:id="@+id/tvstname"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="30dp"
        android:textColor="#05078c"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvemail"
        android:paddingTop="10dp"
        android:layout_width="50dp"
        android:textColor="#05078c"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="15dp"
        android:layout_below="@+id/btneditschedule"
        android:layout_alignRight="@+id/tvsubject"
        android:layout_alignEnd="@+id/tvsubject" />

    <TextView
        android:id="@+id/tvphone"
        android:paddingTop="10dp"
        android:textSize="15dp"
        android:textColor="#05078c"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tvemail" />

    <TextView
        android:id="@+id/tvdisplayemail"
        android:layout_width="wrap_content"
        android:textColor="#05078c"
        android:layout_height="wrap_content"
        android:text="email"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/tvemail"
        android:layout_alignBottom="@+id/tvemail"
        android:layout_toRightOf="@+id/tvbio"
        android:layout_toEndOf="@+id/tvbio"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp" />

    <TextView
        android:id="@+id/tvdisplayphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#05078c"
        android:text="phone"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/tvphone"
        android:layout_alignBottom="@+id/tvphone"
        android:layout_alignLeft="@+id/tvdisplayemail"
        android:layout_alignStart="@+id/tvdisplayemail" />

    <TextView
        android:id="@+id/tvsubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Subject"
        android:textSize="15dp"
        android:textColor="#05078c"
        android:paddingTop="10dp"
        android:layout_below="@+id/tvphone" />

    <TextView
        android:id="@+id/tvdisplaysubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#05078c"
        android:text="subject"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/tvsubject"
        android:layout_alignBottom="@+id/tvsubject"
        android:layout_alignLeft="@+id/tvdisplayphone"
        android:layout_alignStart="@+id/tvdisplayphone" />

    <TextView
        android:id="@+id/tvbio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biography"
        android:textSize="15dp"
        android:textColor="#05078c"
        android:paddingTop="10dp"
        android:layout_below="@+id/tvrating"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvdisplaybio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#05078c"
        android:text="bio"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/tvbio"
        android:layout_alignBottom="@+id/tvbio"
        android:layout_alignLeft="@+id/tvdisplaysubject"
        android:layout_alignStart="@+id/tvdisplaysubject" />

    <TextView
        android:id="@+id/tvrating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="15dp"
        android:textColor="#05078c"
        android:paddingTop="10dp"
        android:layout_below="@+id/tvsubject"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvdisplayrating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#05078c"
        android:text="price"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/tvrating"
        android:layout_alignBottom="@+id/tvrating"
        android:layout_alignLeft="@+id/tvdisplaysubject"
        android:layout_alignStart="@+id/tvdisplaysubject" />

    <Button
        android:id="@+id/btnupdatetutor"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Edit/Update Profile"
        android:layout_below="@+id/tvstname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#05078c"/>
    <Button
        android:id="@+id/btneditschedule"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="View/Update Schedule"
        android:layout_below="@+id/btnupdatetutor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#05078c"/>



</RelativeLayout>
